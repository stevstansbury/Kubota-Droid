<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" tools:override="true">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Material Theme required for Material Components. -->
    <style name="MaterialAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaintenanceGuideTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/maintenance_guide_theme_primary_text_color</item>
        <item name="android:textColorSecondary">@color/maintenance_guide_theme_secondary_text_color</item>
        <item name="android:textColorSecondaryInverse">@color/maintenance_guide_theme_secondary_inverse_text_color</item>
        <item name="android:textColorTertiary">@color/maintenance_guide_theme_tertiary_text_color</item>

        <item name="android:textAppearanceLarge">@style/MaintenanceGuideTextAppearance.Large</item>
        <item name="android:textAppearanceMedium">@style/MaintenanceGuideTextAppearance.Medium</item>
        <item name="android:textAppearanceMediumInverse">@style/MaintenanceGuideTextAppearance.Medium.Inverse</item>
        <item name="android:textAppearanceSmall">@style/MaintenanceGuideTextAppearance.Small</item>
    </style>

    <style name="SearchTheme" parent="AppTheme">
        <item name="colorPrimary">@android:color/white</item>
        <item name="android:textColorPrimary">@color/search_theme_text_color</item>
        <item name="android:textColorSecondary">@color/search_theme_text_color</item>
    </style>

    <style name="AccountSetUpTheme" parent="AppTheme">
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_wht_24dp</item>
        <item name="android:textColorPrimary">@color/sign_up_theme_primary_text_color</item>
        <item name="android:textColorSecondary">@color/sign_up_theme_secondary_text_color</item>
        <item name="android:textColorLink">?colorPrimaryDark</item>
        <item name="android:colorControlNormal">@color/sign_up_theme_color_control_activated</item>
    </style>

    <style name="AccountSetUpTheme.AccountSetUpTextAppearance" parent="TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:textSize">@dimen/account_setup_theme_input_text_size</item>
    </style>

    <style name="AccountSetUpTheme.LoadingDialogStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AccountSetUpTheme.HintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/account_setup_theme_hint_text_size</item>
    </style>

    <style name="AccountSetupErrorTextAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/error_text_color</item>
        <item name="android:textSize">@dimen/account_setup_error_text_size</item>
    </style>

    <style name="ActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_wht_24dp</item>
    </style>

    <style name="ActionBarProgressBar" parent="@android:style/Widget.Material.Light.ProgressBar.Horizontal">
        <item name="android:id">@id/toolbarProgressBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_progress_bar_height</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@android:color/white</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginTop">@dimen/toolbar_progress_bar_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/toolbar_progress_bar_vertical_margin</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="SearchActionBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_grey_24dp</item>
        <item name="android:textColorPrimary">@color/search_theme_action_bar_color_accent</item>
        <item name="colorAccent">@color/search_theme_action_bar_color_accent</item>
    </style>

    <style name="Widget.Design.BottomNavigationView.Kubota">
        <item name="android:background">@color/bottom_navigation_background_color</item>
        <item name="itemTextColor">@color/bottom_navigation_menu_color</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">@color/bottom_navigation_menu_color</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationItemTextAppearance</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationItemTextAppearance</item>
        <item name="menu">@menu/navigation</item>
    </style>

    <style name="BottomNavigationItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/bottom_navigation_text_size</item>
    </style>
    
    <style name="ProfileHeaderLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/profile_header_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/profile_header_vertical_bottom_padding</item>
        <item name="android:paddingStart">@dimen/profile_header_side_padding</item>
        <item name="android:paddingEnd">@dimen/profile_header_side_padding</item>
    </style>
    
    <style name="ProfileHeaderTitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/profile_title_text_size</item>
        <item name="android:textColor">@color/profile_title_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileHeaderSubTitleTextStyle" parent="ProfileHeaderTitleTextStyle">
        <item name="android:textSize">@dimen/profile_subtitle_text_size</item>
        <item name="android:textColor">@color/profile_title_text_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ListItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ItemTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginStart">@dimen/list_item_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/list_item_margin_end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableEnd">@drawable/ic_chevron_right_24dp</item>
    </style>

    <style name="AboutTitleStyle">
        <item name="android:textSize">@dimen/about_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppVersionStyle">
        <item name="android:textSize">@dimen/about_title_text_size</item>
        <item name="android:textColor">@color/version_text_color</item>
    </style>

    <style name="EquipmentDetailButtonStyle">
        <item name="android:layout_height">@dimen/equipment_detail_button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/cardview_item_background</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="EquipmentDetailButtonTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/equipment_detail_button_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/equipment_detail_button_text_color</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_marginStart">@dimen/equipment_detail_button_text_start_margin</item>
        <item name="android:layout_marginEnd">@dimen/equipment_detail_button_text_end_margin</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="MaintenanceGuideTextAppearance.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/maintenance_guide_theme_large_text_size</item>
    </style>

    <style name="MaintenanceGuideTextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/maintenance_guide_theme_medium_text_size</item>
    </style>

    <style name="MaintenanceGuideTextAppearance.Medium.Inverse" parent="TextAppearance.AppCompat.Medium.Inverse">
    </style>

    <style name="MaintenanceGuideTextAppearance.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/maintenance_guide_theme_small_text_size</item>
    </style>

    <style name="ActionButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/action_button_height</item>
        <item name="android:background">@drawable/action_button_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/action_button_color</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.SkipButton">
        <item name="android:padding">0dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">3dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.ManualEntry">
        <item name="android:padding">0dp</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">1000dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
    </style>

    <style name="MapButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/action_button_height</item>
        <item name="android:background">@drawable/map_button_background</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/action_button_color</item>
    </style>

    <style name="ActionModeTheme" parent="MaterialAppTheme">
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
    </style>

    <style name="ActionModeStyle" parent="Base.Widget.AppCompat.ActionMode">
        <item name="background">@color/cab_mode_toolbar_color</item>
        <item name="height">@dimen/cab_mode_toolbar_height</item>
    </style>

    <style name="ErrorTextViewStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/error_view_text_size</item>
        <item name="android:textColor">@color/equipment_text_color</item>
        <item name="android:layout_height">@dimen/error_view_height_width</item>
        <item name="android:layout_width">@dimen/error_view_height_width</item>
        <item name="android:layout_marginTop">@dimen/error_view_margin_top</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">@dimen/error_view_default_margin</item>
        <item name="android:layout_marginEnd">@dimen/error_view_default_margin</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
