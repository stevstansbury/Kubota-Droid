<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SignUpTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorTertiary">?android:textColorPrimary</item>
        <item name="android:textColorLink">@color/colorKubotaLink</item>
    </style>

    <style name="SignUpButtonStyle">
        <item name="android:layout_height">@dimen/sign_in_button_height</item>
        <item name="android:layout_width">@dimen/sign_in_button_width</item>
        <item name="android:textSize">@dimen/sign_in_button_text_size</item>
        <item name="android:layout_marginBottom">@dimen/button_panel_vertical_margin</item>
    </style>

    <style name="TermsAndConditionsStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/kubota_terms_conditions_width</item>
        <item name="android:textSize">@dimen/kubota_terms_conditions_text_size</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SelectedPreferenceButtonStyle">
        <item name="android:layout_height">@dimen/selected_preference_button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/preference_background</item>
        <item name="android:paddingStart">@dimen/selected_preference_padding_end</item>
        <item name="android:paddingEnd">@dimen/selected_preference_padding_end</item>
        <item name="android:layout_marginStart">@dimen/selected_preference_button_side_margin</item>
        <item name="android:layout_marginEnd">@dimen/selected_preference_button_side_margin</item>
    </style>
    
    <style name="ProfileHeaderLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/profile_header_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/profile_header_vertical_padding</item>
        <item name="android:paddingStart">@dimen/profile_header_side_padding</item>
        <item name="android:paddingEnd">@dimen/profile_header_side_padding</item>
    </style>
    
    <style name="ProfileHeaderTitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/profile_title_text_size</item>
        <item name="android:textColor">@color/profile_title_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileHeaderSubTitleTextStyle" parent="ProfileHeaderTitleTextStyle">
        <item name="android:textSize">@dimen/profile_subtitle_text_size</item>
        <item name="android:textColor">@color/profile_title_text_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ListItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ItemTextViewStyle">
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginStart">@dimen/list_item_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/list_item_margin_end</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
