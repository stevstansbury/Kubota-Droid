<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include layout="@layout/view_recycler_list" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/emptyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/empty_equipment_list_background_color"
        android:orientation="vertical"
        android:paddingStart="@dimen/no_equipment_side_padding"
        android:paddingEnd="@dimen/no_equipment_side_padding"
        >

        <TextView
            android:id="@+id/noEquipmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_equipment_title"
            android:textColor="@color/no_equipment_text_color"
            android:textSize="@dimen/no_equipment_title_text_size"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/no_equipment_title_bottom_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="186dp"
            android:layout_height="103dp"
            android:layout_marginBottom="57dp"
            android:src="@drawable/ic_equipment_r_series"
            app:layout_constraintBottom_toTopOf="@id/noEquipmentTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_equipment_message"
            android:textAlignment="center"
            android:textColor="@color/no_equipment_text_color"
            android:textSize="@dimen/no_equipment_message_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/noEquipmentTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <LinearLayout
        android:id="@+id/addEquipmentButton"
        android:layout_width="232dp"
        android:layout_height="56dp"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/fab_background"
        android:gravity="center_vertical"
        android:elevation="2dp">
        
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_add_white_24dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="9dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Your Equipment"
            android:textAllCaps="false"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>