<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/viewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/searchContainer"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="@dimen/toolbar_default_elevation"
            app:navigationIcon="@drawable/ic_arrow_back_wht_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:minHeight="?attr/actionBarSize"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/toolbar_default_padding"
                android:paddingEnd="@dimen/toolbar_default_padding">

            <ImageView
                    android:id="@+id/backIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/ic_arrow_back_wht_24dp"
                    android:tint="@color/equipment_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            <android.support.v7.widget.SearchView
                    android:id="@+id/searchView"
                    app:queryHint="@string/search_hint"
                    app:searchHintIcon="@null"
                    app:layout_constraintStart_toEndOf="@+id/backIcon"
                    android:layout_marginStart="@dimen/search_view_start_margin"
                    android:inputType="textNoSuggestions|textCapWords"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>

    </android.support.design.widget.AppBarLayout>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/kubotaSearchHintRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/searchContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>
