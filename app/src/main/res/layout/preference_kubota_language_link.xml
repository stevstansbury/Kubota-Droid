<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/preference_bottom_margin">

        <TextView
            android:id="@+id/languageCountryRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dropdown_kubota_preference_margin_start"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/language_country_region"
            android:textColor="@color/profile_title_text_color"
            android:textSize="@dimen/title_kubota_preference"
            android:gravity="start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/changeLanguage"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/changeLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dropdown_kubota_preference_margin_start"
            android:text="@string/change_your_language_and_region"
            android:textSize="16sp"
            android:textColor="@color/profile_summary_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/chevron"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/big_switch_kubota_preference_margin_end"
            android:layout_marginEnd="16sp"
            app:srcCompat="@drawable/ic_chevron_right_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
