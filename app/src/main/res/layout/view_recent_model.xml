<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recent_model_height"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/recentModel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/recent_model_start_padding"
        android:paddingEnd="@dimen/recent_model_end_padding"
        android:textSize="@dimen/recent_model_text_size"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/recently_viewed_text_color"
        android:lineSpacingExtra="@dimen/recent_model_text_extra_line_spacing"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="KX080-3"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_color"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>