<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="maintenanceInterval"
            type="com.android.kubota.viewmodel.MaintenanceInterval" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <Button
            android:id="@+id/contactDealerButton"
            android:text="Contact Dealer"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/ActionButtonStyle" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/contactDealerButton">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="36dp"
                android:paddingEnd="36dp"
                android:paddingTop="24dp">

                <TextView
                    android:id="@+id/maintenance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#4f4f4f"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="10sp"
                    android:text="@{maintenanceInterval.action}"
                    tools:text="Maintenance Checks\nTransmission Fluid Change\nHydraulic Fluid Change\nReplace Crank Case\nCylinder Head Change\nMain Bearing Case Maintenance Check\nFlywheel Change\nInjection Pump Change\nIdle Apparatus Change\nNozzle Holder and Glow Plug Change"/>
            </FrameLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>