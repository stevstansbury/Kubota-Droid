<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/faultCodeHeaderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/fault_code_vertical_margin"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="@dimen/fault_code_line_spacing_large"
        android:text="@string/fault_code"
        android:textColor="@color/fault_code_inquiry_text_color"
        android:textSize="@dimen/fault_code_text_size"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/faultCodeLabel"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="@dimen/fault_code_vertical_margin"
        android:fontFamily="sans-serif"
        android:gravity="bottom"
        android:lineSpacingExtra="@dimen/fault_code_line_spacing"
        android:text="@string/fault_code_error_label"
        android:textColor="@color/fault_code_inquiry_text_color"
        android:textSize="@dimen/fault_code_text_size_large"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/faultCodeEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/faultCodeHeaderLabel"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/faultCodeEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="8"
        android:textSize="@dimen/fault_code_text_size"
        app:layout_constraintEnd_toEndOf="@+id/faultCodeHeaderLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/faultCodeLabel"
        app:layout_constraintTop_toBottomOf="@+id/faultCodeHeaderLabel" />

    <TextView
        android:id="@+id/faultCodeHintMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="0dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="@dimen/fault_code_line_spacing_large"
        android:text="@string/enter_fault_code_to_see_description"
        android:textColor="@color/fault_code_inquiry_text_color"
        android:textSize="@dimen/fault_code_text_size"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/faultCodeEditText" />

    <Button
        android:id="@+id/submitButton"
        style="@style/ActionButtonStyle"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/sign_in_button_top_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:enabled="false"
        android:text="@string/submit"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>