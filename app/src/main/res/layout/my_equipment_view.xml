<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/my_equipment_item_height">

    <ImageView
        android:id="@+id/modelImage"
        android:layout_width="@dimen/my_equipment_image_width"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="?attr/listPreferredItemPaddingLeft"
        tools:src="@drawable/ic_tractor_category_thumbnail"/>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chevron_right_24dp"
        android:layout_marginTop="@dimen/list_item_chevron_top_margin"
        android:layout_marginEnd="?attr/listPreferredItemPaddingRight"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/modelCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/equipment_text_color"
        android:textSize="@dimen/my_equipment_category_text_size"
        app:layout_constraintTop_toTopOf="@id/arrow"
        app:layout_constraintStart_toEndOf="@id/modelImage"
        app:layout_constraintStart_toStartOf="@id/modelName"
        tools:text="Construction"/>

    <TextView
        android:id="@+id/modelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/equipment_text_color"
        android:textSize="@dimen/my_equipment_model_text_size"
        app:layout_constraintTop_toBottomOf="@id/modelCategory"
        app:layout_constraintStart_toEndOf="@id/modelImage"
        app:layout_constraintEnd_toEndOf="@id/arrow"
        app:layout_constraintHorizontal_bias=".1"
        tools:text="K008-3"/>
    
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/divider_height"
        android:background="@color/equipment_list_divider_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/modelName"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>