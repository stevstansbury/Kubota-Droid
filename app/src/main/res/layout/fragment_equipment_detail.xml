<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/equipment_detail_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/equipment_detail_header_min_height"
            android:layout_marginStart="@dimen/equipment_detail_side_margin"
            android:layout_marginEnd="@dimen/equipment_detail_side_margin"
            android:layout_marginTop="@dimen/equipment_detail_top_margin"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="@dimen/equipment_detail_header_elevation"
            app:cardCornerRadius="@dimen/equipment_detail_header_corner_radius">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/equipment_detail_header_bottom_margin">

                <ImageView
                    android:id="@+id/equipmentImage"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/equipment_detail_image_height"
                    android:layout_marginStart="@dimen/equipment_image_start_margin"
                    app:layout_constraintWidth_percent="0.33"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/ic_construction_category_thumbnail"
                    android:layout_marginTop="@dimen/equipment_image_top_margin" />

                <ImageView
                    android:id="@+id/editEquipmentIcon"
                    android:layout_width="@dimen/equipment_detail_chevron_size"
                    android:layout_height="@dimen/equipment_detail_chevron_size"
                    android:src="@drawable/ic_edit"
                    android:padding="@dimen/edit_equipment_icon_padding"
                    android:layout_marginEnd="@dimen/edit_equipment_icon_margin_end"
                    android:background="?attr/selectableItemBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/equipmentNickName" />

                <TextView
                    android:id="@+id/equipmentNickName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/equipment_detail_nickname_text_size"
                    android:textColor="@color/equipment_text_color"
                    android:layout_marginStart="@dimen/equipment_nickname_start_margin"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/equipmentImage"
                    app:layout_constraintEnd_toStartOf="@id/editEquipmentIcon"
                    tools:text="@string/equipment_construction_category"
                    android:layout_marginTop="@dimen/equipment_nickname_top_margin"/>

                <TextView
                    android:id="@+id/equipmentModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/equipment_detail_model_text_size"
                    android:textColor="@color/equipment_text_color"
                    android:layout_marginStart="@dimen/equipment_nickname_start_margin"
                    app:layout_constraintTop_toBottomOf="@id/equipmentNickName"
                    app:layout_constraintStart_toEndOf="@id/equipmentImage"
                    tools:text="B1550"/>

                <TextView
                    android:id="@+id/equipmentSerialNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/equipment_serial_number"
                    android:textSize="@dimen/equipment_detail_model_text_size"
                    android:textColor="@color/equipment_text_color"
                    android:layout_marginStart="@dimen/equipment_nickname_start_margin"
                    app:layout_constraintTop_toBottomOf="@id/equipmentModel"
                    app:layout_constraintStart_toEndOf="@id/equipmentImage"
                    tools:text="@string/equipment_serial_number"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/equipment_information_header_text_size"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/equipment_information_header_text_color"
            android:text="@string/equipment_information"
            android:layout_marginStart="@dimen/equipment_information_header_start_margin"
            android:layout_marginTop="@dimen/equipment_information_header_top_margin"
            android:layout_marginBottom="@dimen/equipment_information_header_bottom_margin"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/equipment_detail_button_side_margin"
            android:layout_marginEnd="@dimen/equipment_detail_button_side_margin"
            android:layout_marginTop="@dimen/equipment_detail_button_top_margin"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="@dimen/equipment_detail_header_elevation"
            app:cardCornerRadius="@dimen/equipment_detail_header_corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/engineHoursItem"
                    style="@style/EquipmentDetailButtonStyle">

                    <ImageView
                        android:id="@+id/chevron"
                        android:layout_width="@dimen/equipment_detail_chevron_size"
                        android:layout_height="@dimen/equipment_detail_chevron_size"
                        android:src="@drawable/ic_edit"
                        android:padding="@dimen/edit_equipment_icon_padding"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/equipment_detail_chevron_end_margin"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/engineHours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/equipment_detail_engine_hours_text_size"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="@color/engine_hours_text_color"
                        android:gravity="end"
                        android:layout_toStartOf="@id/chevron"
                        android:layout_marginEnd="@dimen/equipment_detail_engine_hours_text_margin_end"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/engineHours"
                        android:text="@string/engine_hours"
                        style="@style/EquipmentDetailButtonTextStyle"/>

                </RelativeLayout>

                <View
                    style="@style/DividerStyle" />

                <RelativeLayout
                    android:id="@+id/maintenanceItem"
                    style="@style/EquipmentDetailButtonStyle">

                    <ImageView
                        android:id="@+id/maintenanceIcon"
                        android:layout_width="@dimen/equipment_detail_chevron_size"
                        android:layout_height="@dimen/equipment_detail_chevron_size"
                        android:src="@drawable/ic_chevron_right_24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/equipment_detail_chevron_end_margin"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/hoursToService"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/equipment_detail_engine_hours_text_size"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="@color/hours_to_next_service_text_color"
                        android:gravity="end"
                        android:layout_toStartOf="@id/maintenanceIcon"
                        android:layout_marginEnd="@dimen/equipment_detail_engine_hours_text_margin_end"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        style="@style/EquipmentDetailButtonTextStyle"
                        android:layout_toStartOf="@id/hoursToService"
                        android:text="@string/equipment_hours_to_next_service" />

                </RelativeLayout>

                <View
                    style="@style/DividerStyle" />

                <LinearLayout
                    android:id="@+id/faultCodeItem"
                    android:gravity="center_vertical"
                    style="@style/EquipmentDetailButtonStyle">

                    <TextView
                        style="@style/EquipmentDetailButtonTextStyle"
                        android:text="@string/fault_code_inquiry" />

                    <ImageView
                        android:layout_width="@dimen/equipment_detail_chevron_size"
                        android:layout_height="@dimen/equipment_detail_chevron_size"
                        android:src="@drawable/ic_chevron_right_24dp"
                        android:layout_marginEnd="@dimen/equipment_detail_chevron_end_margin" />
                </LinearLayout>

                <View
                    style="@style/DividerStyle" />

                <LinearLayout
                    android:id="@+id/manualItem"
                    android:gravity="center_vertical"
                    style="@style/EquipmentDetailButtonStyle">

                    <TextView
                        style="@style/EquipmentDetailButtonTextStyle"
                        android:text="@string/equipment_manual" />

                    <ImageView
                        android:layout_width="@dimen/equipment_detail_chevron_size"
                        android:layout_height="@dimen/equipment_detail_chevron_size"
                        android:src="@drawable/ic_chevron_right_24dp"
                        android:layout_marginEnd="@dimen/equipment_detail_chevron_end_margin" />
                </LinearLayout>

                <View
                    style="@style/DividerStyle" />

                <LinearLayout
                    android:id="@+id/guidesItem"
                    android:gravity="center_vertical"
                    style="@style/EquipmentDetailButtonStyle">

                    <TextView
                        style="@style/EquipmentDetailButtonTextStyle"
                        android:text="@string/equipment_guides" />

                    <ImageView
                        android:layout_width="@dimen/equipment_detail_chevron_size"
                        android:layout_height="@dimen/equipment_detail_chevron_size"
                        android:src="@drawable/ic_chevron_right_24dp"
                        android:layout_marginEnd="@dimen/equipment_detail_chevron_end_margin" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>