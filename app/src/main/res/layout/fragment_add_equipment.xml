<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/actionButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/addButton"
            style="@style/ActionButtonStyle.AddEquipmentFlow"
            android:text="@string/add_equipment" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/actionButtonLayout"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/add_equipment_text_size"
                android:textColor="@color/sign_up_theme_primary_text_color"
                android:text="@string/equipment_category_header"
                android:layout_marginTop="@dimen/add_equipment_header_top_margin"
                android:layout_marginBottom="@dimen/add_equipment_header_bottom_margin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/add_equipment_category_button_layout_bottom_margin">

                <com.android.kubota.ui.CustomCompoundButton
                    android:id="@+id/constructionCategoryButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/equipment_construction_category"
                    android:layout_marginEnd="@dimen/add_equipment_category_button_margin_end"
                    style="@style/CategoryButtonStyle"/>

                <com.android.kubota.ui.CustomCompoundButton
                    android:id="@+id/mowersCategoryButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/equipment_mowers_category"
                    style="@style/CategoryButtonStyle"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.android.kubota.ui.CustomCompoundButton
                    android:id="@+id/tractorsCategoryButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/equipment_tractors_category"
                    android:layout_marginEnd="@dimen/add_equipment_category_button_margin_end"
                    style="@style/CategoryButtonStyle"/>

                <com.android.kubota.ui.CustomCompoundButton
                    android:id="@+id/utvCategoryButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/equipment_utv_category"
                    style="@style/CategoryButtonStyle"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/add_equipment_edittext_text_size"
                android:textColor="@color/sign_up_theme_primary_text_color"
                android:text="@string/model_header"
                android:layout_marginTop="@dimen/add_equipment_model_header_top_margin"/>

            <TextView
                android:id="@+id/modelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/add_equipment_helpertext_text_size"
                android:textColor="@color/sign_up_theme_primary_text_color"
                android:visibility="gone"
                tools:text="K008-3"
                tools:visibility="visible"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/equipmentImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/add_equipment_input_layout_top_margin"
                android:id="@+id/textInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pinEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="@integer/serial_number_max_length"
                    android:hint="@string/pin_hint"
                    android:textSize="@dimen/add_equipment_edittext_text_size"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:digits="@string/serial_number_digits"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/scanHelperTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/add_equipment_helpertext_text_size"
                android:textColor="@color/sign_up_theme_primary_text_color"
                android:layout_marginTop="@dimen/add_equipment_helpertext_top_margin"
                tools:text="Don\â€™t have a PIN? Scan your serial number."/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/equipmentImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/add_equipment_input_layout_top_margin">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/equipmentNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="@integer/model_nickname_max_length"
                    android:hint="@string/equipment_name_hint"
                    android:textSize="@dimen/add_equipment_edittext_text_size"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/add_equipment_helpertext_text_size"
                android:textColor="@color/sign_up_theme_primary_text_color"
                android:layout_marginTop="@dimen/add_equipment_helpertext_top_margin"
                android:text="@string/equipment_name_helper_text" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
