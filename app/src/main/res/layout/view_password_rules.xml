<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/password_view_row_bottom_margin">
        <TextView
            android:id="@+id/characterLimitRule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/password_view_text_size"
            android:textColor="?android:textColorPrimary"
            android:text="@string/password_rule_character_limit"
            android:drawableStart="@drawable/password_rule_not_met"
            android:drawablePadding="@dimen/password_view_drawable_padding" />

        <TextView
            android:id="@+id/upperCaseRule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/password_view_text_size"
            android:textColor="?android:textColorPrimary"
            android:text="@string/password_rule_uppercase_letter"
            android:drawableStart="@drawable/password_rule_not_met"
            android:drawablePadding="@dimen/password_view_drawable_padding" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lowerCaseRule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/password_view_text_size"
            android:textColor="?android:textColorPrimary"
            android:text="@string/password_rule_lower_case"
            android:drawableStart="@drawable/password_rule_not_met"
            android:drawablePadding="@dimen/password_view_drawable_padding" />

        <TextView
            android:id="@+id/specialCharacterRule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/password_view_text_size"
            android:textColor="?android:textColorPrimary"
            android:text="@string/password_rule_number_special_character"
            android:drawableStart="@drawable/password_rule_not_met"
            android:drawablePadding="@dimen/password_view_drawable_padding" />
    </LinearLayout>

</LinearLayout>